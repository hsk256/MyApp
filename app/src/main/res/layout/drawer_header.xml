<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="166dp"
    android:background="@mipmap/ic_user_background">
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/iv_header"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        fresco:failureImage="@mipmap/iconfont_touxiang"
        fresco:placeholderImage="@mipmap/iconfont_touxiang"
        fresco:roundAsCircle="true"
        fresco:roundedCornerRadius="5dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_below="@+id/iv_header"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="16dp">
        <TextView
            android:id="@+id/tv_header_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:layout_marginLeft="16dp"
            android:text="hsk"/>
        <TextView
            android:id="@+id/tv_header_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:layout_below="@+id/tv_header_name"
            android:text="hsk256@163.com"/>
    </RelativeLayout>

</RelativeLayout>
